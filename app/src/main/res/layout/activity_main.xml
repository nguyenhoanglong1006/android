<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d14d4d"
        android:text="MÁY 1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewM1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matlunglabai" />

        <ImageView
            android:id="@+id/imageViewM2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matlunglabai" />

        <ImageView
            android:id="@+id/imageViewM3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matlunglabai" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_kqM"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=""
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="#eadbc8"
        android:textColor="@color/black"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editText_TimeStart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Thời Gian Chạy \n (GIÂY)"
            android:inputType="time"
            android:textAlignment="center"

            android:textSize="15dp" />

        <EditText
            android:id="@+id/editText_Step"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Bước nhảy \n (GIÂY)"
            android:inputType="time"
            android:textAlignment="center"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:background="#ebebeb"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Máy 1"
                android:textSize="20dp"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/May"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageSamSet"
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/vs" />

            <TextView
                android:id="@+id/Nguoi"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="15dp"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:text="0"
                android:textAlignment="viewStart" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Máy 2"
                android:textColor="@color/black"
                android:textSize="20dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_kqNg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text=""
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewNg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matlunglabai" />

        <ImageView
            android:id="@+id/imageViewNg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matlunglabai" />

        <ImageView
            android:id="@+id/imageViewNg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/matlunglabai" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d14d4d"
        android:text="MÁY 2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lật Bài"
            android:textSize="35dp" />

    </LinearLayout>




</LinearLayout>